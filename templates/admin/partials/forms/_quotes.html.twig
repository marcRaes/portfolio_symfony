                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                {{ form_widget(quotesForm.display) }}
                                <label class="ms-2">{{ form_label(quotesForm.display) }}</label>
                            </div>
                        </div>
                    </div>

