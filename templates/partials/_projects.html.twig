<div class="d-flex flex-wrap justify-content-center">
    {% for project in listProjects %}
        <div class="mt-4 me-4">
            <div class="card h-100 shadow" style="width: 18rem;">
                <img src="{{ asset('uploads/project/' ~ project.picture) }}" class="card-img-top" alt="{{ project.picture }}">
                <div class="card-body">
                    <h1 class="fs-5 card-title">{{ project.name }}</h1>
                    <h3 class="text-secondary fs-6 pt-3 pb-1">Languages:</h3>
                    <p class="card-text">{{ project.listSkills }}</p>
                    <h3 class="text-secondary fs-6 pt-3 pb-1">Outils:</h3>
                    <p class="card-text">{{ project.listDevTools }}</p>
                </div>
                <div class="card-footer p-0">
                    <div class="d-flex">
                        <div class="w-100">
                            <a href="{{ project.url }}" class="d-flex align-items-center justify-content-center py-3" target="_blank">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/>
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/>
                                </svg>
                                <span class="ps-2">Visualiser</span>
                            </a>
                        </div>
                        {% if project.urlGit is not empty %}
                            <div class="w-100 border-start border-dark-subtle">
                                <a href="{{ project.urlGit }}" class="d-flex align-items-center justify-content-center py-3" target="_blank">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
                                        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
                                    </svg>
                                    <span class="ps-2">Github</span>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
