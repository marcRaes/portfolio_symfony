<h2 class="accordion-header">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
        Compétences
    </button>
</h2>

<div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionPortfolio">
    <div class="accordion-body">
        <div class="table-responsive mb-4">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th>Pourcentage</th>
                    <th>Afficher</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for skill in user.skills %}
                    <tr {{ skill.display ? '' : 'class="table-danger fw-bold"' }}>
                        <td>{{ skill.name }}</td>
                        <td>{{ skill.percentage }}</td>
                        <td>{{ skill.display ? 'OUI' : 'NON' }}</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="{{ path('app_edit_skills', {'id': skill.id}) }}" data-turbo-frame="edit_skill_{{ skill.id }}">Editer</a>
                            <a class="btn btn-danger btn-sm" href="{{ path('app_delete_skills', {'id': skill.id}) }}">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="mt-2 text-center">
                <a class="btn btn-primary" href="{{ path('app_create_skills') }}">Ajouter une compétence</a>
            </div>
        </div>
    </div>
</div>