{% extends 'Admin/baseAdmin.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>

    <div id="loginForm">
        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 required" for="inputEmail">Adresse email</label>
            <div class="col-sm-10">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 required" for="inputPassword">Mot de passe</label>
            <div class="col-sm-10">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
        </div>

        <div class="mb-3 row form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="remember_me flexSwitchCheckDefault" name="_remember_me">
            <label class="form-check-label" for="remember_me flexSwitchCheckDefault">Souviens-toi de moi</label>
        </div>

        <div class="mb-3 row">
            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </div>

    <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
</form>
{% endblock %}
