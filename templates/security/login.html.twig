{% extends 'admin/base_admin.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block flash_messages %}
    <div class="position-absolute top-0 start-50 translate-middle-x mt-4 w-75" style="z-index: 1050;">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show text-center" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}

{% block body %}
    <div class="card shadow-lg rounded-4 p-5 w-100" style="max-width: 400px;">
        <div class="text-center mb-4">
            <img src="{{ asset('pictures/section/logo_admin.png') }}" alt="Logo" width="80">
            <h2 class="mt-3 fw-bold">Connexion</h2>
            <p class="text-muted">Veuillez vous connecter Ã  votre compte</p>
        </div>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.message|trans }}</div>
            {% endif %}

            <div class="form-floating mb-3">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label class="col-form-label col-sm-2 required" for="inputEmail">Adresse email</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <label class="col-form-label col-sm-2 required" for="inputPassword">Mot de passe</label>
            </div>

            <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" role="switch" id="remember_me flexSwitchCheckDefault" name="_remember_me">
                <label class="form-check-label" for="remember_me flexSwitchCheckDefault">Souviens-toi de moi</label>
            </div>

            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
